public class SumOfDigits {
    public static void main(String[] args) {
        int number = 1234; // Example number
        int sum = 0;

        while (number != 0) {
            sum += number % 10; // Extract the last digit
            number /= 10;       // Remove the last digit
        }

        System.out.println("Sum of digits: " + sum);
    }
}
